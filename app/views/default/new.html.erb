Creating a new <%=resource.class.name%>

<%=error_messages_for resource_instance_name %>

<% form_for resource_instance_name, resource, :url => { :action => "create" } do |f| %>
	
	<%=get_content_for_object('fields', f)%>
	
	<br/>
	
	<%= submit_tag 'Create' %>
	
	<% if resource.respond_to?(:get_redirect_to_url) && resource.respond_to?(:billed_actor)
		resource.billed_actor ||= @billed_actor %>
		<%= link_to "cancel", resource.get_redirect_to_url(self) %>
	<% else %>
		<%= link_to "cancel", url_for(:action => 'index')%>
	<% end %>
	
	
<% end %>